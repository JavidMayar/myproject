<h1 id="header">Listing papers</h1>
<table border="4" cellspacing="6"bordercolor="black" cellpadding="10" style="margin-left:46px;">
  <tr class="tr_color">
    <th background="blue">Title</th>
    <th>Permalink</th>
    <th>Body</th>
    <th>Created at</th>
    <th>Updated at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @papers.each do |paper| %>
    <tr>
    <td><%= paper.title %></td>
    <td><%= paper.permalink %></td>
    <td><%= paper.body %></td>
    <td><%= paper.created_at %></td>
    <td><%= paper.updated_at %></td>
    <td><%= link_to image_tag('show.jpg', :calss=> 'list.image'), paper %></td>
 
  <td><%= link_to image_tag('edit.jpg', :class => 'list_image'), edit_paper_path(paper) %></td>
    <td><%= link_to image_tag('delete.jpg', :class=> 'list_image'), paper, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
<% end %>
</table>

